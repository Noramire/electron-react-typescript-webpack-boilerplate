{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb",
    "plugin:react/recommended",
    "plugin:import/react",
    "plugin:import/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "@typescript-eslint",
    "import"
  ],
  "settings": {
    "import/resolver": {
      "node": {},
      "webpack": {}
    },
    "import/extensions": [
      ".js", ".jsx", ".ts", ".tsx"
    ]
  },
  "rules": {
    "linebreak-style": "off",
    "no-unused-vars": "warn",
    "max-len": [
      "error",
      {
        "ignoreUrls": true
      }
    ],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "webpack.*.js",
          "test/**/*.js"
        ]
      }
    ],
    "react/prop-types": "off",
    "sort-imports": "off",
    "import/prefer-default-export": 0,
    "import/no-default-export": 2,
    "import/no-named-default": 0,
    "eqeqeq": "off",
    "max-len": "off",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".tsx"
        ]
      }
    ],
    "react/jsx-props-no-spreading": "off",
    "react/no-array-index-key": "off",
    "import/extensions": ["error", "ignorePackages", {
      "js": "never",
      "jsx": "never",
      "ts": "never",
      "tsx": "never"
    }]
  }
}